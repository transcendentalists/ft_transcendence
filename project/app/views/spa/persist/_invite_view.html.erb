<script type="text/template" id="invite-view-template">
  <div class="content">
    <div class="header">
      <%%= name %>
      <div class="right floated image">
        <img class="ui avatar image" src="<%%= image_url %>">
      </div>
    </div>
    <div class="meta">
      <span class="category">
        <%%= guild ? guild.anagram : "소속된 길드가 없습니다." %>
      </span>
    </div>
    <div class="description">
      <p>
        <%%= name + "님이 대전을 신청하셨습니다."%>
      </p>
    </div>
  </div>
  <div class="extra content">
    <div class="ui centered grid">
      <div class="row fluid">
        <button class="ui green basic button" data-invite-value="approve">
          Approve
        </button>
        <button class="ui red basic button" data-invite-value="decline">
          Cancel
        </button>
      </div>
    </div>
  </div>
</script>